/*===== Global Styles =====*/
body{
    margin:0;
}
.desktop{
    display: none!important;
}
.mobile{
    display: block!important;
}
@media(min-width:768px){
    
    .mobile{
        display:none!important;
    }
    .desktop{
        display: block!important;
    }
}


  /* ========== Header ============== */

  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width:100%;
    margin-top: 49px;
}
.cart-account-wrapper {
    display: flex;
    align-items: center;
    padding-right:48px;
}
.account-wrapper a {
    margin-right: 32px;
    text-decoration: none;
    color:#fff;
    font-family: 'Univers';
    font-size:13px;
}
.menu-icon {
    padding-left: 27px;
    max-width:48px;
    cursor: pointer;
}
.cart-icon{
    max-width: 22px;
}
@media(min-width:768px){
    .header{
        margin-top:15px;
    }
}

/*=====Hero ===== */
.home-hero {
    min-height: 800px;
    background-size: cover;
    margin-top: -102px;
    
}
.hero-content {
    width: 100%;
    text-align: center;
    padding-top: 82%;
    padding-bottom: 60px;
}
.hero-title{
    font-size:97px;
    line-height:113px;
    font-family: 'Ogg-Regular';
    color:#fff; 
    margin-bottom:20px;
}
.hero-title span{
    font-family: 'Ogg-Italic';
}
.hero-desc{
    font-family: Univers;
    font-size:16px;
    line-height:25px;
    color:#fff;
    max-width:273px;
    margin:auto;
}
.subtext{
    font-family: 'Univers Condensed Light';
    font-size: 11px;
    line-height: 20px;
    letter-spacing: 0.458333px;
    color:#fff;
    text-transform: uppercase;
    padding-bottom: 12px;
}
.btn{
    display: block;
    text-align: center;
    text-decoration: none;
    color: #232323;
    background: #fff;
    padding: 12px 0px;
    border-radius: 3px;
    font-family: 'Univers Extended Bold';
    font-size: 14px;
    line-height: 16px;
    letter-spacing: 1.16667px;
    text-transform: uppercase;
    margin-top: 12px;
    max-width:376px;
    width:100%;
    margin:auto;
    
}
@media(min-width:768px){
    .hero-content{
        text-align:left;
        max-width: 480px;
        padding-left: 96px;
        padding-top: 100px;
    }
    .hero-desc{
        margin: revert;
    }
    .hero-btn{
        max-width:290px;
        margin:0;
    }
    .home-hero {
        margin-top: -68px;
        
    }

}

/*===== Menu =====*/
.menu-wrapper {
    position: absolute;
    top: 0;
    bottom: 0;
    left: -150%;
    width: 100%;
   
    background: #F9F8F5;   ;
    transition: left ease-in-out .5s;
}

.close-menu-img {
    max-width: 48px;
    cursor: pointer;
    padding: 49px 27px;
}
.menu{
    margin-top:106px;
    margin-bottom:50px;
}
.menu-logo {
    position: absolute;
    left: calc(50% - 28px);
    right: calc(50%-28px);
    top: 56px;
    max-width:56px;
}
.menu a {
    display: block;
    font-family: 'Ogg-Regular';
    font-style: normal;
    font-weight: normal;
    font-size: 60px;
    line-height: 90px;
    text-decoration: none;
    color: #2b2b2b;
    text-align: center;
}

.submenu a{
    display: block;
    text-align:center;
    font-family: 'Univers Extended Bold';
    font-size: 14px;
    line-height: 30px;
    text-transform: uppercase;
    text-decoration: none;
    color:#232323
}

.menu-wrapper.open {
    transform: translateX(0px);
    left:0;
    
}
@media(min-width:768px){
    .menu-wrapper{
        width:50%;
        background:#fff;
    }
    .close-menu-img{
        padding:16px 27px;
    }
}

/*==== Cart ==== */
.cart-drawer {
    position: absolute;
    top: 0;
    bottom: 0;
    right: -150%;
    width: 100%;
    max-width:100%;   
    background: #F2f2f2;   ;
    transition: right ease-in-out .5s;
}
.cart-header {
    margin: 49px 0 95px 0;
}
.cart-logo {
    margin-left: 180px;
}
.back-arrow {
    float: right;
    margin-right: 36px;
    margin-bottom:108px;
}
.cart-drawer h3 {
    margin: 0 auto 219px auto;
    text-align: center;
    margin-top: 258px;
    font-family: 'Ogg-Regular';
    font-size: 40px;
    
}
.btn.keep-shopping {
    border: 1px solid #000;
}
.cart-drawer.open {
    transform: translateX(0px);
    right:0;
    
}
.line-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 36px;
    width:calc(100% - 72px);
}
.cart-total {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom:300px;
    padding: 0 36px;
}
.cart-subtotal-hr {
    border: #000 1px solid;
    margin: 16px 36px;
}
.cart-hr {
    margin-top: 32px;
    width: 122px;
}
.line-item-info {
    display: flex;
    align-items: center;
    
}
.info {
    margin-left: 32px;
}
.line-item-title {
    font-family: 'Ogg-Regular';
    font-style: normal;
    font-weight: normal;
    font-size: 24px;
    line-height: 32px;
    margin:0 0 2px 0;
}
.variant-name-price, .quanity-wrapper {
    font-family: 'Univers Condensed Regular';
    font-size: 14px;
    line-height: 20px;
    letter-spacing: .5px;
    margin:2px 0;
}
.quanity-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 50px;
}
.minus, .plus{
    cursor: pointer;
    padding: 0 10px;
}
.subtotal{
    font-family:'Univers Condensed Light';
    font-size: 11px;
    line-height: 20px;
    text-transform: uppercase;
}
.price{
    font-family: 'Univers Extended Bold';
    font-size: 14px;
    line-height: 31px;
    letter-spacing: 0.777778px;
    text-transform: uppercase;
}
.btn.checkout{
    background: #1d1d1d;
    color:#fff;
}
.cart-total p{
    margin:0;
}
@media (min-width:768px){

    .cart-drawer{
        background: #fff;
        max-width:414px; 
    }
    .back-arrow {
        float: none;
        margin-right: 0px;
        margin-bottom:0px;
        margin-left:88px;
    }
    .cart-header {
        margin: 49px 0 95px 0;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
}