<div class="menu-wrapper">
  <a class="close-menu">
    {% render 'menu-close' %}
  </a>
    {% render 'menu-logo' %}
  <div class="menu">
    {% for link in linklists[section.settings.main-menu].links %}
      {% assign child_list_handle = link.title | handleize %}
    {% if linklists[child_list_handle].links != blank %}
      <a href="{{ link.url }}"><span>{{ link.title }}</span></a>
      [{% for childlink in linklists[child_list_handle].links %}
        <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
      {% endfor %}]
    {% else %}
      <a href="{{ link.url }}"><span><img class="hover-img" src="https://cdn.shopify.com/s/files/1/0611/4633/3429/files/dl_product.png?v=1637263605" alt="product image">{{ link.title }}</span></a>
    {% endif %}
    {% endfor %}
  </div>
  <div class="submenu desktop">
    {% for link in linklists[section.settings.sub-desktop].links %}
      {% assign child_list_handle = link.title | handleize %}
    {% if linklists[child_list_handle].links != blank %}
      <a href="{{ link.url }}"><span>{{ link.title }}</span></a>
      [{% for childlink in linklists[child_list_handle].links %}
        <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
      {% endfor %}]
    {% else %}
      <a href="{{ link.url }}"><span>{{ link.title }}</span></a>
    {% endif %}
    {% endfor %}
  </div>
  <div class="submenu mobile">
    {% for link in linklists[section.settings.sub-mobile].links %}
      {% assign child_list_handle = link.title | handleize %}
    {% if linklists[child_list_handle].links != blank %}
      <a href="{{ link.url }}"><span>{{ link.title }}</span></a>
      [{% for childlink in linklists[child_list_handle].links %}
        <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
      {% endfor %}]
    {% else %}
      <a href="{{ link.url }}"><span>{{ link.title }}</span></a>
    {% endif %}
    {% endfor %}
  </div>
    

</div>

{% schema %}
{
  "name": "Menu",
  "settings":[
  {
    "type": "link_list",
    "id": "main-menu",
    "label": "Main Menu",
    "default": "main-menu"
  },
  {
    "type": "link_list",
    "id": "sub-desktop",
    "label": "Sub Menu Desktop",
    "default": "main-menu"
  },
  {
    "type": "link_list",
    "id": "sub-mobile",
    "label": "Sub Menu Mobile",
    "default": "main-menu"
  },
  {
    "type": "image_picker",
    "id": "menu-logo",
    "label": "Menu Logo"
   },
  {
    "type": "image_picker",
    "id": "close-menu",
    "label": "Close Menu Icon"
   }
  ]
}
{% endschema %}